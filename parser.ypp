			try {
				($<funcParams>right)->addParam(*($<var>FormalDecl->var));
				$<funcParams>result = $<funcParams>right;
				delete ($<var>FormalDecl->var);
			}
			catch (NameAlreadyExistsException e){
				// Redeclaration of function parameter
				errorDef(yylineno,($<var>FormalDecl->var)->getName());
				exit(0);
			}		
		}
/****************************************************************************/
