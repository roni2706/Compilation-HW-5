/* Exp -> Exp MUL Exp */
/****************************************************************************/
		| Exp[left] MUL Exp[right] { 
			if ((($<var>left)->var->getType() != "int") && 
				(($<var>left)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);	
			}
			if ((($<var>right)->var->getType() != "int") && 
				(($<var>right)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);	
			}
			if ((($<var>left)->var->getType() == "int") || 
				(($<var>right)->var->getType() == "int")){
				($<var>result)->var = new Var("__temp","int");
			}
			else {
				($<var>result)->var = new Var("__temp","byte");
			}
			($<var>result)->var->allocReg(regPool->allocateReg());
			regPool->freeReg(($<var>left)->var->getReg());
			regPool->freeReg(($<var>right)->var->getReg());
			// TODO: emit code
			($<var>left)->var->freeReg();
			($<var>right)->var->freeReg();
			if (($<var>left)->var->getName() == "__temp"){
				delete ($<var>left)->var;
			}
			if (($<var>right)->var->getName() == "__temp"){
				delete ($<var>right)->var;
			}
		}
/****************************************************************************/


/* Exp -> Exp ADD Exp */
/****************************************************************************/
		| Exp[left] ADD Exp[right] {
			if ((($<var>left)->var->getType() != "int") && 
				(($<var>left)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);	
			}
			if ((($<var>right)->var->getType() != "int") && 
				(($<var>right)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);	
			}
			if ((($<var>left)->var->getType() == "int") || 
				(($<var>right)->var->getType() == "int")){
				($<var>result)->var = new Var("__temp","int");
			}
			else {
				($<var>result)->var = new Var("__temp","byte");
			}
			($<var>result)->var->allocReg(regPool->allocateReg());
			regPool->freeReg(($<var>left)->var->getReg());
			regPool->freeReg(($<var>right)->var->getReg());
			// TODO: emit code
			($<var>left)->var->freeReg();
			($<var>right)->var->freeReg();
			if (($<var>left)->var->getName() == "__temp"){
				delete ($<var>left)->var;
			}
			if (($<var>right)->var->getName() == "__temp"){
				delete ($<var>right)->var;
			}
		}
/****************************************************************************/


/* Exp -> ID */
/****************************************************************************/
		| ID {
			try {
				($<var>result)->var = const_cast<Var*>(&(table->findVar(*($<str>ID))));
			}
			catch (VariableNotFoundException e){
				// Using undefined variable
				errorUndef(yylineno,*($<str>ID));
				exit(0);
			}
			($<var>result)->var->allocReg(regPool->allocateReg());
			// TODO: emit code
		}
/****************************************************************************/


/* Exp -> ID PERIOD ID */
/****************************************************************************/
		| ID[left] { 
		/********************************************************************/
			try{
				const string& structName =
					table->findVar(*($<str>left)).getType();
				table->findStruct(structName);
			}
			catch (VariableNotFoundException e){
				// Using undefined struct
				errorUndef(yylineno,*($<str>left));
				exit(0);
			}
			catch (StructNotFoundException e){
				// Using undefined struct
				errorUndef(yylineno,*($<str>left));
				exit(0);
			}
		/********************************************************************/
		} PERIOD ID[right] {
		/********************************************************************/
			const StructNode* strct;
			try{
				const string& structName =
					table->findVar(*($<str>left)).getType();
				strct = &(table->findStruct(structName));
				($<var>result)->var = new Var("__temp",strct->find(*($<str>right)).getType());
			}
			catch (VariableNotFoundException e){
				// Using undefined struct member
				errorUndefStructMember(yylineno,*($<str>left));
				exit(0);
			}
			($<var>result)->var->allocReg(regPool->allocateReg());
			// TODO: emit code
		}
/****************************************************************************/


/* Exp -> Call */
/****************************************************************************/
		| Call {
			($<var>result)->var = ($<var>Call)->var;
			($<var>result)->var->allocReg(regPool->allocateReg());
			// TODO: emit code
			// result = Call
		}
/****************************************************************************/


/* Exp -> NUM */
/****************************************************************************/
		| NUM {
			($<var>result)->var = new Var("__temp","int");
			($<var>result)->var->allocReg(regPool->allocateReg());
			emit(loadi(($<var>result)->var->getReg(),$<num>NUM));
		}
/****************************************************************************/


/* Exp -> NUM B */
/****************************************************************************/
		| NUM B {
			if ($<num>NUM > 255){
				std::stringstream ss;
				ss << $<num>NUM;
				// Invalid value for byte
				errorByteTooLarge(yylineno,ss.str());
				exit(0);
			}
			($<var>result)->var = new Var("__temp","byte");
			($<var>result)->var->allocReg(regPool->allocateReg());
			emit(loadi(($<var>result)->var->getReg(),$<num>NUM));
		}
/****************************************************************************/


/* Exp -> STRING */
/****************************************************************************/
		| STRING {
			($<var>result)->var = new Var("__temp","string");
			// TODO: emit code
		}
/****************************************************************************/


/* Exp -> TRUE */
/****************************************************************************/
		| TRUE {
			($<var>result)->var = new Var("__temp","bool");
			($<var>result)->truelist = emitWithPatch("goto ");
		}
/****************************************************************************/


/* Exp -> FALSE */
/****************************************************************************/
		| FALSE {
			($<var>result)->var = new Var("__temp","bool");
			($<var>result)->falselist = emitWithPatch("goto ");
			}
/****************************************************************************/


/* Exp -> NOT Exp */
/****************************************************************************/
		| NOT Exp[left] {
			const string& leftType = ($<var>left)->var->getType();
			const string& leftName = ($<var>left)->var->getName();
			if (leftType != "bool"){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			($<var>result)->var = new Var("__temp","bool");
			($<var>result)->truelist = ($<var>left)->falselist;
			($<var>result)->falselist = ($<var>left)->truelist;
			
			if (leftName == "__temp"){
				delete ($<var>left)->var;
			}
		}
/****************************************************************************/


/* Exp -> Exp AND Exp */
/****************************************************************************/
		| Exp[left] <var>{
			$<var>$->quad = genLabel();
		} AND Exp[right] { 
			if (($<var>left)->var->getType() != "bool"){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			if (($<var>right)->var->getType() != "bool"){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			($<var>result)->var = new Var("__temp","bool");	
			backpatch(($<var>left)->truelist,($<var>2)->quad);
			($<var>result)->falselist = merge(($<var>left)->falselist,($<var>right)->falselist);
			($<var>result)->truelist =($<var>right)->truelist;

			if (($<var>left)->var->getName() == "__temp"){
				delete ($<var>left)->var;
			}
			if (($<var>right)->var->getName() == "__temp"){
				delete ($<var>right)->var;
			}
		}
/****************************************************************************/


/* Exp -> Exp OR Exp */
/****************************************************************************/
		| Exp[left] <var>{
			$<var>$->quad = genLabel();
		} OR Exp[right] {
			if (($<var>left)->var->getType() != "bool"){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			if (($<var>right)->var->getType() != "bool"){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			($<var>result)->var = new Var("__temp","bool");	
			codeBuffer.bpatch(($<var>left)->falselist,($<var>2)->quad);
			($<var>result)->truelist = merge(($<var>left)->truelist,($<var>right)->truelist);
			($<var>result)->falselist =($<var>right)->falselist;
			if (($<var>left)->var->getName() == "__temp"){
				delete ($<var>left)->var;
			}
			if (($<var>right)->var->getName() == "__temp"){
				delete ($<var>right)->var;
			}
		}
/****************************************************************************/


/* Exp -> Exp REL Exp */
/****************************************************************************/
		| Exp[left] REL Exp[right] {
			if ((($<var>left)->var->getType() != "int")&&
				(($<var>left)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			if ((($<var>right)->var->getType() != "int")&&
				(($<var>right)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			($<var>result)->var = new Var("__temp","bool");
			regPool->freeReg(($<var>left)->var->getReg());
			regPool->freeReg(($<var>right)->var->getReg());
			stringstream code;
			if ( *($<str>REL) == string("<") ) {
				code << "blt";
			} else if ( *($<str>REL) == string("<=") ) {
				code << "ble";			
			} else if ( *($<str>REL) == string(">") ) {
				code << "bgt";			
			} else if ( *($<str>REL) == string(">=") ) {
				code << "bge";			
			}
			code 
				<< " $" 
				<< ($<var>left)->var->getReg() 
				<< ",$" 
				<< ($<var>right)->var->getReg()
				<< ",";
			($<var>left)->truelist = emitWithPatch(code.str());
			($<var>left)->falselist = emitWithPatch("goto ");
			
			($<var>left)->var->freeReg();
			($<var>right)->var->freeReg();
			delete($<str>REL);
			if (($<var>left)->var->getName() == "__temp"){
				delete ($<var>left)->var;
			}
			if (($<var>right)->var->getName() == "__temp"){
				delete ($<var>right)->var;
			}
		}
/****************************************************************************/


/* Exp -> Exp EQ Exp */
/****************************************************************************/
		| Exp[left] EQ Exp[right] {
			if ((($<var>left)->var->getType() != "int")&&
				(($<var>left)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			if ((($<var>right)->var->getType() != "int")&&
				(($<var>right)->var->getType() != "byte")){
				// Mismatch of type for operation
				errorMismatch(yylineno);
				exit(0);
			}
			($<var>result)->var = new Var("__temp","bool");
			regPool->freeReg(($<var>left)->var->getReg());
			regPool->freeReg(($<var>right)->var->getReg());
			stringstream code;
			if ( *($<str>EQ) == string("==") ) {
				code << "beq";
			} else {
				code << "bne";			
			}
			code
				<< " $"
				<< ($<var>left)->var->getReg()
				<< ",$"
				<< ($<var>right)->var->getReg()
				<< ",";
			($<var>left)->truelist = emitWithPatch(code.str());
			($<var>left)->falselist = emitWithPatch("goto ");
			($<var>left)->var->freeReg();
			($<var>right)->var->freeReg();
			delete($<str>EQ);
			if (($<var>left)->var->getName() == "__temp") {
				delete ($<var>left)->var;
			}
			if (($<var>right)->var->getName() == "__temp") {
				delete ($<var>right)->var;
			}
		}
/****************************************************************************/
