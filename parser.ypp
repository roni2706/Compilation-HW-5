/* Statements -> LBRACE Statements RBRACE */
/****************************************************************************/
Statement : LBRACE { 
		/********************************************************************/
			const string& initiator = table->getScopeInitiator();
			const string& retType = table->getScopeRetType();
			if (initiator == "while"){
				table->addScope("while",retType);
			}
			else {
				table->addScope(initiator,retType);
			}
		/********************************************************************/
		} Statements { } RBRACE {
		/********************************************************************/
			table->removeScope();
		}
/****************************************************************************/


