				}
		/********************************************************************/
		} LBRACE StructMemList RBRACE SC {
		/********************************************************************/
			table->addStruct(*($<str>ID),*($<structMembers>StructMemList));
			delete ($<str>ID);
			delete ($<structMembers>StructMemList);
